const express = require('express');

const theory1Hard = express.Router();
const pool = require('../server/db');

require('dotenv').config();

theory1Hard.use(express.json());

theory1Hard.get('/', async (req, res) => {
  try {
    const events = await pool.query(`        
    SELECT AVG(believability_score) FROM theories AS t
    JOIN believability AS b ON t.id = b.theory_id
    WHERE t.title = 'There is a CTC to FAANG pipeline'`);
    res.status(200).json(events.rows);
  } catch (err) {
    res.status(500).json(err.message);
  }
});

module.exports = theory1Hard;
